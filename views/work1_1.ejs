1-1.고객관리 -->
<!Doctype html>
<Html lang="en">
    <Head>
        <Link rel="stylesheet" href="work_style1_1.css">
        <meta charset="utf-8">     
        <title>고객 관리</title> 
    </Head>

    <Body>
        <div class="container">
            <div id="section1" class="item">
                <h1>고객 관리</h1>
                <p class="agroup">신규고객 등록 및 회원정보 편집</p>
            
            </div>

            <div id="section2" class="item">
                <h2>신규고객 등록</h2>
                <form name="myform" action="Result.jsp" method="post">
                    <table border=1>
                        <tr>
                            <td>고객명</td>
                            <td><input type="text" name="name">
                        </tr>
                        <tr>
                            <td>생년월일</td>
                            <td><input type="text" name="residence">
                        </tr>
                        <tr>
                            <td>휴대전화번호</td>
                            <td><input type="text" name="phone">
                        </tr>
                        <tr>
                            <td>대출구분</td>
                            <td>신용<input type="radio" name="loan" value="신용">
                            담보<input type="radio" name="loan" value="담보">
                        </tr>
                        <tr>
                            <td>담보구분</td>
                            <td>
                            없음<input type="checkbox" name="mark" value="없음">
                            부동산<input type="checkbox" name="mark" value="부동산">
                            주식<input type="checkbox" name="mark" value="주식">
                            보험<input type="checkbox" name="mark" value="보험">
                            기타<input type="checkbox" name="mark" value="기타">
                        </tr>
                        <tr>
                            <td>대출금액</td>
                            <td><input type="text" name="price">
                        </tr>
                        <tr>
                            <td>대출실행일</td>
                            <td><input type="date" name="actdate">
                        </tr>
                        <tr>
                            <td>대출종료일</td>
                            <td><input type="date" name="enddate">
                        </tr>
                        <tr>
                            <td>기타</td>
                            <td><textarea name="comment" cols="50" rows="5"
                                      placeholder ="부가정보가 있으면 적어주세요."></textarea>
                        </tr>

                    </table>
                <br><input type="submit" value="전송" onclick="return inputCheck()"/>
                    <input type="reset" value="취소">   
                </form>
            </div>
            

            <div id="section3" class="item">
                <h2>고객 목록</h2> 
                <table border = 1 summary="고객 목록" >
                    <colgroup>
                        <col width="100"/>
                        <col width="150"/>
                        <col width="100"/>
                        <col width="100"/>
                        <col width="100"/>
                        <col width="100"/>
                        <col width="100"/>
                        <col width="100"/>
                        <col width="100"/>
                        <col width="100"/>
                    </colgroup>
                    <thead>
                        <tr>
                            <th align="center">고객명</th>
                            <th align="center">생년월일</th>
                            <th align="center">Phone</th>
                            <th align="center">대출구분</th>
                            <th align="center">담보구분</th>
                            <th align="center">대출금액</th>
                            <th align="center">대출실행일</th>
                            <th align="center">대출종료일</th>
                            <th align="center">담당자</th>
                            <th align="center">심사단계</th>
                        </tr>
                    </thead>
                    <tbody>
                        <tr>
                            <td align="center" colspan="8">내용이 없습니다.</td>
                        </tr>
                        <tr>
                            <td align="center" colspan="1" id="c1">name</td>
                            <td align="center" colspan="1" id="c2">residence</td>
                            <td align="center" colspan="1" id="c3">phone</td>
                            <td align="center" colspan="1" id="c4">loan</td>
                            <td align="center" colspan="1" id="c5">mark</td>
                            <td align="center" colspan="1" id="c6">price</td>
                            <td align="center" colspan="1" id="c7">actdate</td>
                            <td align="center" colspan="1" id="c8">enddate</td>
                            <td align="center" colspan="1" id="c9">manager</td>
                            <td align="center" colspan="1" id="c10">level</td>
                        </tr>
                    </tbody>
                </table>
            </div>
        </div>
    </Body>
    
    <script>
        function inputCheck() {
            var userinput =eval("document.myform");
            if (userinput.name.value =="") {
                alert("고객명을 입력하세요.");
                userinput.name.focus();
                return false;
            }
            if (userinput.residence.value =="") {
                alert("주민번호 앞6자리를 입력하세요.");
                userinput.residence.focus();
                return false;
            }
            if (isNaN(userinput.residence.value)) {
                alert("주민번호 앞6자리를 숫자만 입력하세요.");
                userinput.residence.select();
                return false;
            }
            if (userinput.phone.value =="") {
                alert("휴대전화번호를 입력하세요.");
                userinput.phone.focus();
                return false;
            }
            if (isNaN(userinput.phone.value)) {
                alert("휴대전화번호를 '-'없이 숫자만 입력하세요.");
                userinput.phone.select();
                return false;
            }
        
            var loans= userinput.loan;
            var flag = false;
            for (var i=0; i<loans.length; i++) {
                if(loans[i].checked) {
                    flag=true;
                    break;
                }
            }
            if (flag == false) {
                alert("대출구분을 선택하세요.");
                return false;
            }
            var marks = userinput.mark;
            var flag = false;
            for (var i=0; i<marks.length; i++) {
                if(marks[i].checked) {
                    flag=true;
                    break;
                }
            }
            if (flag == false) {
                alert("담보구분을 선택하세요. 신용대출의 경우 '없음'을 선택해주세요.")
                return false;
            }
            if (userinput.price.value =="") {
                alert("대출금액을 입력하세요.");
                userinput.price.focus();
                return false;
            }
            if (isNaN(userinput.price.value)) {
                alert("대출금액을 숫자로 입력하세요.");
                userinput.price.select();
                return false;
            }
            if (userinput.actdate.value =="") {
                alert("대출실행일을 입력하세요.");
                userinput.actdate.focus();
                return false;
            }
            if (userinput.enddate.value =="") {
                alert("대출종료일을 입력하세요.");
                userinput.enddate.focus();
                return false;
            }
            if (userinput.actdate.value >= userinput.enddate.value) {
                alert("대출실행일과 종료일을 확인해주세요");
                return false;
            }  
        };
    </script>
</Html>


